@model Ertaqy_Task.PL.ActionRequests.CreateProductAR

@{

    SelectList listItems = new SelectList(ViewBag.providersList, "Id", "ProviderName");

    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center fw-bold fs-4">
                    Create New Product
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="ProductName" class="form-label fw-semibold">Product Name</label>
                            <input asp-for="ProductName" class="form-control" placeholder="Enter product name..." />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ProductPrice" class="form-label fw-semibold">Product Price</label>
                            <input asp-for="ProductPrice" class="form-control" placeholder="Enter price..." />
                            <span asp-validation-for="ProductPrice" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ProviderId" class="form-label fw-semibold">Service Provider</label>
                            <select asp-for="ProviderId" asp-items="listItems" class="form-select">
                                <option value="">-- Select Provider --</option>
                            </select>
                            <span asp-validation-for="ProviderId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary w-50 me-2">Back to List</a>
                            <input type="submit" value="Create" class="btn btn-primary w-50" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
