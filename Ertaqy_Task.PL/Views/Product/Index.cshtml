@using Ertaqy_Task.BLL.DTOs
@model IEnumerable<Ertaqy_Task.PL.ViewModels.ProductVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Product List</h1>


<form method="get" asp-action="Index" class="row g-3 mb-4">
    <div class="col-md-2">
        <input type="number" step="0.01" name="minPrice" value="@ViewBag.MinPrice" placeholder="Min Price" class="form-control" />
    </div>
    <div class="col-md-2">
        <input type="number" step="0.01" name="maxPrice" value="@ViewBag.MaxPrice" placeholder="Max Price" class="form-control" />
    </div>
    <div class="col-md-2">
        <input type="date" name="dateFrom" value="@ViewBag.DateFrom" class="form-control" />
    </div>
    <div class="col-md-2">
        <input type="date" name="dateTo" value="@ViewBag.DateTo" class="form-control" />
    </div>
    <div class="col-md-2">
        <select name="ProviderId" class="form-control" asp-items="ViewBag.ProvidersList" >
            <option value="">-- Select Provider --</option>
        </select>
    </div>
    <div class="col-md-2">
        <input type="text" name="search" value="@ViewBag.Search" placeholder="Search..." class="form-control" />
    </div>
    <div class="col-md-12 mt-2">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a asp-action="Index" class="btn btn-secondary">Reset</a>
    </div>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProviderName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProviderName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
