@using Ertaqy_Task.BLL.DTOs
@model IEnumerable<Ertaqy_Task.PL.ViewModels.ProductVM>

@{
    ViewData["Title"] = "Index";
}


<h1 class="text-center text-primary mb-4">Products</h1>

<hr />

<div class="row mt-5">
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white fw-bold">
                Filter Options
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index" class="row g-3">
                    <div class="col-12">
                        <label class="form-label fw-semibold">Min Price</label>
                        <input type="number" step="1" name="minPrice" value="@ViewBag.MinPrice" class="form-control" />
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-semibold">Max Price</label>
                        <input type="number" step="1" name="maxPrice" value="@ViewBag.MaxPrice" class="form-control" />
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-semibold">Date From</label>
                        <input type="date" name="dateFrom" value="@ViewBag.DateFrom" class="form-control" />
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-semibold">Date To</label>
                        <input type="date" name="dateTo" value="@ViewBag.DateTo" class="form-control" />
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-semibold">Service Provider</label>
                        <select name="ProviderId" class="form-control" asp-items="ViewBag.ProvidersList">
                            <option value="">-- Select Provider --</option>
                        </select>
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-semibold">Search</label>
                        <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search..." />
                    </div>

                    <div class="col-12 d-flex justify-content-between mt-3">
                        <button type="submit" class="btn btn-primary w-50 me-2">Filter</button>
                        <a asp-action="Index" class="btn btn-secondary w-50">Reset</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-secondary fw-bold">Products List</h4>
            <a asp-action="Create" class="btn btn-outline-primary">+ Create New</a>
        </div>

        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th> ID </th>
                    <th> Product Name </th>
                    <th> Price </th>
                    <th> Creation Date </th>
                    <th> Provider </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ProductName</td>
                            <td>@item.ProductPrice</td>
                            <td>@item.CreationDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@item.ProviderName</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No products found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
