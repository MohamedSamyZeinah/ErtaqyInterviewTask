@model Ertaqy_Task.PL.ActionRequests.CreateServicePrviderAR

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center fw-bold fs-4">
                    Create New Service Provider
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">

                        <div class="mb-3">
                            <label asp-for="ProviderName" class="form-label fw-semibold">Provider Name</label>
                            <input asp-for="ProviderName" class="form-control" placeholder="Enter provider name..." />
                            <span asp-validation-for="ProviderName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProviderEmail" class="form-label fw-semibold">Provider Email</label>
                            <input asp-for="ProviderEmail" class="form-control" placeholder="Enter provider email..." />
                            <span asp-validation-for="ProviderEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProviderPhoneNumber" class="form-label fw-semibold">Provider Phone Number</label>
                            <input asp-for="ProviderPhoneNumber" class="form-control" placeholder="Enter phone number..." />
                            <span asp-validation-for="ProviderPhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ProviderAddress" class="form-label fw-semibold">Provider Address</label>
                            <input asp-for="ProviderAddress" class="form-control" placeholder="Enter address..." />
                            <span asp-validation-for="ProviderAddress" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary w-50 me-2">Back to List</a>
                            <input type="submit" value="Create" class="btn btn-primary w-50" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
