@{
    Layout = "";
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ertaqy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

   <partial name="_NavPartial">

    <section class="py-5 bg-primary text-white text-center">
        <div class="container py-5">
            <h1 class="display-4 fw-bold">Welcome to Ertaqy</h1>
            <p class="lead mb-4">Manage your Products and Service Providers efficiently and easily!</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg me-2">View Products</a>
            <a asp-controller="ServiceProvider" asp-action="Index" class="btn btn-outline-light btn-lg">View Providers</a>
        </div>
    </section>

    <section class="py-5">
        <div class="container text-center">
            <h2 class="fw-bold text-primary mb-4">What You Can Do</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title text-primary fw-semibold">Add New Products</h5>
                            <p class="card-text text-muted">Easily create and manage all your products in one place.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title text-primary fw-semibold">Manage Providers</h5>
                            <p class="card-text text-muted">Add, view your service providers quickly.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title text-primary fw-semibold">Filter & Search</h5>
                            <p class="card-text text-muted">Find exactly what you need using advanced filters.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-white border-top text-center py-3 mt-4 text-muted">
        &copy; 2025 - Ertaqy
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>